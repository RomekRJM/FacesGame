<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewFaceRow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/face_16" />
    <TextView
        android:id="@+id/text_face_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewFaceRow"
        android:layout_alignParentTop="true"
        android:text="Grucho"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/text_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For: Guess 2 in a row"
        android:layout_below="@+id/text_face_name"
        android:layout_toRightOf="@+id/imageViewFaceRow"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="10 minutes ago"
        android:layout_below="@+id/text_score"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>